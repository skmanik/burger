<section class="main">
  <div class="main-body">
    <div class="container">
      <div class="columns">
        <div class="column">
          <h1 class="title">Ready to Eat</h1>
          <ul class="burger-list">
            {{#each burgers}} {{#unless devoured}}
            <li>
              {{burger_name}}
              <button class="change-devour" data-id="{{id}}" data-newdevour="true">
                DEVOUR IT!
              </button>
            </li>
            {{/unless}} {{/each}}
          </ul>
        </div>
        <div class="column">
          <h1 class="title">Already Eaten</h1>
          <ul class="burger-list dead-burgers">
            {{#each burgers}} {{#if devoured}}
            <li>
              {{burger_name}}
            </li>
            {{/if}} {{/each}}
          </ul>
        </div>
      </div>
      <div class="columns">
        <div class="column">
          <h1 class="title add-burger">Add a Burger!</h1>
          <form class="field create-form has-addons">
            <div class="control">
              <input class="input" id="burger-name" name="name" type="text" placeholder="Enter burger name...">
            </div>
            <div class="control burger-submit">
              <button class="button is-info" type="submit">Add It!</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>